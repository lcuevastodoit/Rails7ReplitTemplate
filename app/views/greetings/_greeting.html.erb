<div id="<%= dom_id greeting %>" class="list-group-item list-group-item-action gap-3 py-3">
<div class="media">
      <img src="<%= gravatarized_url(greeting.name) %>"
          class="align-self-start mt-2">
      <div class="media-body">
           <h5 class="mt-3"><%= greeting.name %></h5>
           <%= simple_format(greeting.message) %>
      </div>
  </div>
  <br/>
</div>
